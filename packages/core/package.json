{
  "name": "@claudecluster/core",
  "version": "0.1.0",
  "description": "Core types, interfaces, and base classes for ClaudeCluster",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --build --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "types:check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "zod": "^3.22.0"
  },
  "keywords": [
    "claudecluster",
    "types",
    "interfaces",
    "core"
  ],
  "author": "ClaudeCluster Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/claudecluster/claudecluster.git",
    "directory": "packages/core"
  }
}