{
  "name": "@claudecluster/shared",
  "version": "0.1.0",
  "description": "Shared utilities, configuration, and common functionality for ClaudeCluster",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./config": {
      "import": "./dist/config/index.js",
      "types": "./dist/config/index.d.ts"
    },
    "./logger": {
      "import": "./dist/logger/index.js",
      "types": "./dist/logger/index.d.ts"
    },
    "./events": {
      "import": "./dist/events/index.js",
      "types": "./dist/events/index.d.ts"
    },
    "./health": {
      "import": "./dist/health/index.js",
      "types": "./dist/health/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --build --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "types:check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@claudecluster/core": "workspace:*",
    "pino": "^8.16.0",
    "pino-pretty": "^10.2.0",
    "eventemitter2": "^6.4.9",
    "zod": "^3.22.0",
    "dotenv": "^16.3.0",
    "yaml": "^2.3.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "claudecluster",
    "shared",
    "utilities",
    "configuration",
    "logging"
  ],
  "author": "ClaudeCluster Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/claudecluster/claudecluster.git",
    "directory": "packages/shared"
  }
}