{
  "name": "@claudecluster/cli",
  "version": "0.1.0",
  "description": "Command-line interface for ClaudeCluster",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "claudecluster": "dist/cli.js",
    "cc": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --watch --config jest.config.cjs",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.{ts,js,json}",
    "format:check": "prettier --check src/**/*.{ts,js,json}",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@claudecluster/shared": "file:../shared",
    "@claudecluster/core": "file:../core",
    "@claudecluster/driver": "file:../driver",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "yaml": "^2.3.4",
    "axios": "^1.6.0",
    "eventsource": "^2.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0",
    "@types/eventsource": "^1.1.15"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "templates/**/*"
  ],
  "keywords": [
    "claudecluster",
    "cli",
    "orchestration",
    "coding"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/claudecluster/claudecluster.git",
    "directory": "packages/cli"
  },
  "license": "Apache-2.0"
}