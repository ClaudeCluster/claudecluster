{
  "name": "@claudecluster/mcp",
  "version": "0.1.0",
  "description": "MCP coordination server for ClaudeCluster - routes tasks to workers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "tsx watch src/main.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.{ts,js,json}",
    "format:check": "prettier --check src/**/*.{ts,js,json}",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@claudecluster/shared": "workspace:*",
    "fastify": "^4.24.3",
    "dotenv": "^16.3.1",
    "pino": "^8.17.2",
    "zod": "^3.22.4",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0",
    "tsx": "^4.7.0"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "keywords": [
    "claudecluster",
    "mcp",
    "model-context-protocol",
    "server"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/claudecluster/claudecluster.git",
    "directory": "packages/mcp"
