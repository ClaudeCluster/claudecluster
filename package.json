{
  "name": "claudecluster",
  "version": "0.1.0",
  "description": "Distributed Claude Code orchestration framework",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.15.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "clean": "turbo run clean && rimraf node_modules/.cache",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "test:e2e": "turbo run test:e2e",
    "test:e2e:smoke": "jest --config=tests/e2e/smoke.config.js",
    "test:e2e:integration": "jest --config=tests/e2e/integration.config.js", 
    "test:e2e:resilience": "jest --config=tests/e2e/resilience.config.js",
    "test:e2e:performance": "jest --config=tests/e2e/performance.config.js",
    "test:e2e:all": "pnpm test:e2e:smoke && pnpm test:e2e:integration && pnpm test:e2e:resilience && pnpm test:e2e:performance",
    "test:e2e:local": "cross-env NODE_ENV=test CLUSTER_ENV=local pnpm test:e2e:all",
    "test:e2e:cloud": "cross-env NODE_ENV=test CLUSTER_ENV=cloud pnpm test:e2e:all",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "types:check": "turbo run types:check",
    "start:worker": "pnpm --filter @claudecluster/worker start",
    "start:driver": "pnpm --filter @claudecluster/driver start",
    "start:mcp": "pnpm --filter @claudecluster/mcp start",
    "dev:worker": "pnpm --filter @claudecluster/worker dev",
    "dev:driver": "pnpm --filter @claudecluster/driver dev",
    "dev:mcp": "pnpm --filter @claudecluster/mcp dev",
    "docker:build": "docker-compose -f docker-compose.yml build",
    "docker:up": "docker-compose -f docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker-compose.yml down",
    "docker:logs": "docker-compose -f docker-compose.yml logs -f",
    "docker:status": "docker-compose -f docker-compose.yml ps",
    "docker:clean": "docker-compose -f docker-compose.yml down -v --remove-orphans",
    "docker:health": "node scripts/docker-health-check.js",
    "docker:env-check": "node scripts/docker-env-check.js",
    "cloud:deploy-worker-dev": "gcloud run deploy claudecluster-worker-dev --source packages/worker --region us-central1 --platform managed --allow-unauthenticated --set-env-vars NODE_ENV=development",
    "cloud:deploy-worker-staging": "gcloud run deploy claudecluster-worker-staging --source packages/worker --region us-central1 --platform managed --allow-unauthenticated --set-env-vars NODE_ENV=staging", 
    "cloud:deploy-worker-prod": "gcloud run deploy claudecluster-worker-prod --source packages/worker --region us-central1 --platform managed --allow-unauthenticated --set-env-vars NODE_ENV=production",
    "cloud:deploy-mcp-dev": "gcloud run deploy claudecluster-mcp-dev --source packages/mcp --region us-central1 --platform managed --allow-unauthenticated --set-env-vars NODE_ENV=development",
    "cloud:deploy-mcp-staging": "gcloud run deploy claudecluster-mcp-staging --source packages/mcp --region us-central1 --platform managed --allow-unauthenticated --set-env-vars NODE_ENV=staging",
    "cloud:deploy-mcp-prod": "gcloud run deploy claudecluster-mcp-prod --source packages/mcp --region us-central1 --platform managed --allow-unauthenticated --set-env-vars NODE_ENV=production",
    "cli": "pnpm --filter @claudecluster/cli claudecluster",
    "postinstall": "husky install",
    "prepare": "husky install",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "docs:build": "typedoc",
    "docs:serve": "http-server docs -p 8080"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2",
    "typedoc": "^0.25.4",
    "http-server": "^14.1.1"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": ["prettier --write"],
    "*.{ts,js}": ["eslint --fix"]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "claudecluster",
    "claude",
    "ai",
    "distributed",
    "orchestration",
    "typescript",
    "monorepo"
  ],
  "author": "ClaudeCluster Team",
  "license": "MIT",
  "homepage": "https://github.com/claudecluster/claudecluster#readme",
  "repository": {
    "type": "git", 
    "url": "git+https://github.com/claudecluster/claudecluster.git"
  },
  "bugs": {
    "url": "https://github.com/claudecluster/claudecluster/issues"
  }
}