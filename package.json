{
  "name": "claudecluster-monorepo",
  "version": "0.1.0",
  "description": "ClaudeCluster monorepo - Open-source orchestration framework for Claude Code",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "tools/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "clean": "turbo run clean && rm -rf node_modules",
    "setup": "node tools/setup/setup.js",
    "taskmaster": "pnpm --filter @claudecluster/taskmaster start",
    "taskmaster:dev": "pnpm --filter @claudecluster/taskmaster dev",
    "cli": "pnpm --filter @claudecluster/cli start",
    "core:dev": "pnpm --filter @claudecluster/core dev",
    "worker:dev": "pnpm --filter @claudecluster/worker dev",
    "driver:dev": "pnpm --filter @claudecluster/driver dev",
    "prepare": "husky",
    "docker:build": "./scripts/docker-dev.sh build",
    "docker:up": "./scripts/docker-dev.sh up",
    "docker:down": "./scripts/docker-dev.sh down",
    "docker:restart": "./scripts/docker-dev.sh restart",
    "docker:logs": "./scripts/docker-dev.sh logs",
    "docker:status": "./scripts/docker-dev.sh status",
    "docker:clean": "./scripts/docker-dev.sh clean",
    "docker:health": "./scripts/docker-dev.sh health",
    "docker:env-check": "./scripts/docker-dev.sh env-check",
    "docker:rebuild": "./scripts/docker-dev.sh rebuild",
    "docker:test-cli": "./scripts/test-cli-docker.sh",
    "docker:validate-health": "./scripts/validate-health-checks.sh",
    "cloud:deploy-worker": "./scripts/deploy-worker-gcloud.sh",
    "cloud:deploy-worker-dev": "./scripts/deploy-worker-gcloud.sh dev",
    "cloud:deploy-worker-staging": "./scripts/deploy-worker-gcloud.sh staging",
    "cloud:deploy-worker-prod": "./scripts/deploy-worker-gcloud.sh prod",
    "cloud:deploy-mcp": "./scripts/deploy-mcp-gcloud.sh",
    "cloud:deploy-mcp-dev": "./scripts/deploy-mcp-gcloud.sh dev",
    "cloud:deploy-mcp-staging": "./scripts/deploy-mcp-gcloud.sh staging",
    "cloud:deploy-mcp-prod": "./scripts/deploy-mcp-gcloud.sh prod",
    "test:e2e": "./scripts/test-e2e.sh",
    "test:e2e:smoke": "./scripts/test-e2e.sh --test-suite=smoke",
    "test:e2e:integration": "./scripts/test-e2e.sh --test-suite=integration",
    "test:e2e:resilience": "./scripts/test-e2e.sh --test-suite=resilience",
    "test:e2e:performance": "./scripts/test-e2e.sh --test-suite=performance",
    "test:e2e:all": "./scripts/test-e2e.sh --test-suite=all",
    "test:e2e:local": "./scripts/test-e2e.sh --local",
    "test:e2e:cloud": "./scripts/test-e2e.sh --cloud",
    "test:e2e:ci": "./scripts/test-e2e.sh --ci --junit",
    "security:audit": "pnpm audit --audit-level moderate",
    "security:fix": "pnpm audit fix",
    "types:check": "tsc --noEmit",
    "test:coverage": "turbo run test -- --coverage",
    "coverage:upload": "codecov",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run",
    "deps:check": "pnpm outdated",
    "deps:update": "pnpm update"
  },
  "keywords": [
    "claude",
    "ai",
    "orchestration",
    "parallel",
    "coding",
    "cluster",
    "framework",
    "monorepo"
  ],
  "author": "Moshin Hashmi",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/moshinhashmi/claudecluster.git"
  },
  "bugs": {
    "url": "https://github.com/moshinhashmi/claudecluster/issues"
  },
  "homepage": "https://github.com/moshinhashmi/claudecluster#readme",
  "devDependencies": {
    "@codecov/webpack-plugin": "^1.9.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint-config-prettier": "^9.1.0",
    "axios": "^1.6.2",
    "codecov": "^3.8.2",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lerna": "^8.0.0",
    "lint-staged": "^16.1.5",
    "nx": "^17.0.0",
    "prettier": "^3.3.3",
    "semantic-release": "^24.2.7",
    "ts-jest": "^29.1.1",
    "turbo": "^1.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "prettier --write"
    ],
    "*.{ts,js}": [
      "eslint --fix"
    ]
  }
}
